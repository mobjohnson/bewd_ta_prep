<h1>Dogs R Us</h1>

<%= link_to 'Add a Dog', new_dog_path %>

<h3>Dogs Index</h3>
<ul>
  <% @dogs.each do |dog|%>
    
    <li><a href='dogs/<%= dog.id %>'><%= dog.name %></a></li>
    <%= link_to 'Edit', edit_dog_path(dog) %>

    <%= link_to 'Delete', dog_path(dog), method: :delete %></li>

  <% end %>
</ul>

